generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  name       String
  password   String
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  UserDetail UserDetail[]

  @@map("users")
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admins")
}

model Major {
  id         Int          @id @default(autoincrement())
  name       String
  degree     String
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  UserDetail UserDetail[]

  @@map("majors")
}

model UserDetail {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id])
  userId         Int      @map("user_id")
  major          Major    @relation(fields: [majorId], references: [id])
  majorId        Int      @map("major_id")
  phone          String
  graduationDate DateTime @map("graduation_date")
  address        String
  lat            String
  long           String
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("user_details")
}
